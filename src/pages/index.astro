---
import Layout from '../layouts/Layout.astro';

const title = 'Pranavv Raja';
---

<Layout title={title}>
	<main>
		<p>Welcome, this is </p>
		<h1>{title}</h1>
		<p class="para">Learning new things everyday</p>
	</main>
</Layout>

<style>
	main {
		margin: 1rem;
		padding: 1rem;
		max-width: 100vh;
		max-height: 100vh;
		font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
	}
	p {
		font-size: 1.2rem;
		color: darkgray;
		font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
		font-weight: 525;
		margin-bottom: 0px;
		transition: all 250ms ease-in-out;
	}
	.intro{
		letter-spacing: 1.5px;
		font-size: 1.5rem;
	}
	h1{
		font-size: 3.5rem;
		font-weight: 900;
		margin-top: 0px;
		transition: all 250ms ease-in-out;
	}

	.para{
		font-size: 3.5rem;
		color: darkgray;
		font-weight: 700;
		margin-top: 20px;
		width: 80%;
	}

	@media (max-width: 600px) {
		main {
			margin: 0.5rem;
			padding: 0.5rem;
			max-width: 100vh;
			max-height: 100vh;
			font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
		}
		p {
			font-size: 1rem;
			color: darkgray;
			font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
			font-weight: 525;
			margin-bottom: 0px;
		}
		.intro{
			letter-spacing: 1.5px;
			font-size: 1.2rem;
		}
		h1{
			font-size: 2.5rem;
			margin-top: 0px;
		}

		.para{
			font-size: 2.5rem;
			color: darkgray;
			font-weight: 700;
			margin-top: 20px;
			width: 80%;
		}
	}

</style>
