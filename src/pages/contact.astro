---
import Layout from "../layouts/Layout.astro";
import Social from "../components/social.astro";

const title = "Contact Me";
---

<Layout title={title}>
  <main>
	  <h1>{title}</h1>
	  <div class="soc">
      <p>
        <ul>
          <li>
            <a href="mailto:22j35.pranavv@sjec.ac.in">
              <img src="email.png" class="logo" />
              <span>
                You can contact me at <b>22j35.pranavv@sjec.ac.in</b></span
              ></a
            >
          </li>
          <li>
            <Social platform="Github" username="pranavvraja">
              <img src="Github.png" class="logo" />
              <span> You can find my repositories on <b>GitHub</b>.</span>
            </Social>
          </li>

          <li>
            <Social platform="LinkedIn" username="pranavvraja">
              <img src="linkedin.png" class="logo" /><span>
                View my <b>LinkedIn</b> profile.</span
              >
            </Social>
          </li>
          <li>
            <Social platform="Twitter" username="pranavvraja">
              <img src="twitter.png" class="logo" /><span>
                Follow me on <b>Twitter</b>.</span
              >
            </Social>
          </li>
        </ul>
      </p>
    </div>
  </main>
</Layout>

<style>
  main {
    margin: 1rem;
    padding: 1rem;
    /*max-width: 100vh;
    max-height: 100vh;*/
  }
  
  a {
    padding: 3px 10px;
    width: 20px;
    color: black;
    background-color: none;
    text-decoration: none;
    align-items: center;
  }
  b:hover {
    background-color:azure;
    color: rgb(5, 49, 95);
    transition: all 250ms ease-in-out;
  }
  
  
  .soc {
    text-align: left;
    align-items: center;
    line-height: 2;
    
  }
  .logo {
    width: 25px;
    background-color: azure;
    border-radius: 5px;
    border: 5px solid azure;
  }
  ul {
    list-style-type: none;
    align-items: center;
  }
  span{
    color: azure;
	align-items: center;
  }
</style>
