---
import Layout from "../layouts/Layout.astro";
import Social from "../components/social.astro";

const title = "Contact Me";
---

<Layout title={title}>
  <main>
    <h1>{title}</h1>
    <div class="soc">
      <p>
        <ul>
          <li>
            <a href="mailto:pranavvraja@gmail.com">
              <img src="/email.png" class="logo" />
              <span>
                Mail me at <b>pranavvraja@gmail.com</b></span
              ></a
            >
          </li>
          <li>
            <Social platform="Github" username="pranavvraja">
              <img src="/Github.png" class="logo" />
              <span> Check out my repositories on <b>GitHub</b>.</span>
            </Social>
          </li>

          <li>
            <Social platform="LinkedIn" username="pranavvraja">
              <img src="/linkedin.png" class="logo" /><span>
                View my <b>LinkedIn</b> profile.</span
              >
            </Social>
          </li>
          <li>
            <Social platform="Twitter" username="pranavvraja">
              <img src="/twitter.png" class="logo" /><span>
                Follow me on <b>Twitter</b>.</span
              >
            </Social>
          </li>
        </ul>
      </p>
    </div>
  </main>
</Layout>

<style>
  main {
    margin: 1rem;
    padding: 20px 50px;
    /*max-width: 100vh;
    max-height: 100vh;*/
  }

  a {
    padding: 3px 10px;
    width: 20px;
    background-color: none;
    text-decoration: none;
    align-items: center;
  }

  b:hover {
    background-color: azure;
    color: rgb(5, 49, 95);
    transition: all 250ms ease-in-out;
  }

  .soc {
    text-align: left;
    align-items: center;
    line-height: 3;
  }
  .logo {
    width: 35px;
    transition: all 250ms ease-in-out;
  }
  ul {
    list-style-type: none;
    align-items: center;
    align-content: center;
    padding: 1rem;
  }
  li{
    display: block;
    padding: 5px;
    align-items: center;
    align-content: center;
  }
  img{
    padding-top: 15px;
    display: inline-block;
  }
  
  span {
    display: inline-block;
    color: azure;
    font-size: 1.2rem;
    padding-left: 5px;
  }
  .logo:hover{
        transform: scale(1.3);
  }

  @media (max-width: 600px) {
    main {
      margin: .5rem;
      padding: .5rem;
    }
    span{
      font-size: .8rem;
    }
    h1{
			font-size: 2.5rem;
			margin-top: 0px;
		}
  }
</style>
