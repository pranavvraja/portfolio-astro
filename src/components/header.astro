<header class="container">
  <div class="header-left">
    <a href="/" class="profile">
      <img
        src="/profile.jpg"
        alt="Profile Image Of Pranavv Raja"
        class="image"
      />
      <span class="name"><b>Pranavv Raja</b></span>
    </a>
  </div>

  <div class="header-right">
    <nav class="navi">
      <ul class="nav-list">
        <li class="nav-item">
          <a href="/about" class="nav-link">About</a>
        </li>
        <li class="nav-item">
          <a href="/projects" class="nav-link">Projects</a>
        </li>
        <li class="nav-item">
          <a href="/contact" class="nav-link">Contact</a>
        </li>
      </ul>
    </nav>
  </div>
</header>

<style>
  header {
    width: 100%;
    padding-top: 10px;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .profile {
    align-items: center;
    text-decoration: none;
    font-family: fantasy;
    font-weight: 500;
    display: flex;
    animation: fadeIn ease-in-out 500ms;
    color: #F0E3E3;
    padding: 10px 40px;
    margin-left: 20px;
    transition: all 250ms ease-in-out;
    font-size: 1.5rem;
  }
  .profile:hover {
    text-decoration: none;
    text-shadow: 0px 2px 18px rgba(255, 255, 255, 0.8);
    color: rgb(255, 255, 255);
    transition: all 250ms ease-in-out;
  }

  .profile:hover .image {
    filter: brightness(120 %);
  }

  .image {
    border-radius: 50%;
    width: 45px;
  }

  .name {
    margin-left: 0.75rem;
    font-size: larger;
    font-weight: 400;
    font-family: "Gill Sans", "Gill Sans MT", Calibri, "Trebuchet MS",
      sans-serif;
  }

  a {
    text-decoration: none;
    color: darkgray;
    position: relative;
  }
  a::before {
    background: #0E8388;
    content: "";
    inset: 0;
    position: absolute;
    transform: scaleX(0);
    transform-origin: right;
    transition: transform 0.5s ease-in-out;
    z-index: -1;
  }

  a:hover::before {
    transform: scaleX(1);
    transform-origin: left;
  }

  @keyframes fadeIn {
    0% {
      opacity: 0;
    }
    100% {
      opacity: 1;
    }
  }
.navi{
  padding-right: 60px;
}

  .nav-item {
    padding: 2px;
    display: inline-flex;
    align-items: center;
    column-gap: 1.55rem;
    list-style-type: none;
  }

  .nav-link {
    padding: 5px 12px;
    font-size: large;
    color: rgb(202, 202, 202);
    font-family: "Gill Sans", "Gill Sans MT", Calibri, "Trebuchet MS",
      sans-serif;
    font-weight: 600;
    transition: all 250ms ease-in-out;
    font-size: x-large;
  }
  .nav-link:hover {
    text-decoration: none;
    color: rgb(255, 255, 255);
    text-shadow: 0px 2px 18px rgba(255, 255, 255, 0.8);
  }

  @media screen and (max-width: 980px) {
    .nav-link {
      font-size: 1.4rem;
      font-weight: 600;
      padding: 4px 7px;
    }
    header {
      padding-top: 0%;
    }
    .profile {
      margin-left: 0px;
      padding: 6px 14px;
      font-size: 1.2rem;
      padding-right: 6px;
      width: fit-content;
    }
    .image {
      width: 35px;
    }
  }
  @media screen and (max-width: 640px) {
    .nav-link {
      font-size: 0.9rem;
      font-weight: 600;
      padding: 3px 6px;
    }
    header {
      padding-top: 0%;
    }
    .profile {
      margin-left: 0px;
      padding: 4px 10px;
      font-size: 0.9rem;
      padding-right: 6px;
      width: fit-content;
    }
    .image {
      width: 33px;
    }
    .nav-item {
      column-gap: 1rem;
    }
  }
</style>
