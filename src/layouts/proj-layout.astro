---
const { frontmatter } = Astro.props;
---

<div class="box">
  <div class="container">
    <div class="text">
      <h1>{frontmatter.title}</h1>
      <p><b>{frontmatter.status}</b></p>
      <p>{frontmatter.description}</p>
      <slot />
      <!-- <p><b>Languages Used:</b>{frontmatter.languages}</p> -->
      <p><a href={frontmatter.link} class="btn">View Source Code</a></p>
    </div>
    <div class="img-container">
      <img src={frontmatter.image} width="100%" height="100%" />
    </div>
  </div>
</div>

<div class="blank"></div>

<style>
  .container {
    background: #00000092;
    border-radius: 1rem;
    box-shadow: 0 0 1rem rgba(208, 205, 205, 0.168);
    padding: 3rem;
    width: 100%;
    font-weight: 600;
    transition: all 250ms ease-in-out;
    display: flex;
    /* flex-direction: column; */
  }

  .container:hover {
    transform: scale(1.02);
  }

  .box {
    transition: all 150ms ease-in-out;
    display: flex;
    justify-content: center;
    padding: 1rem;
    color: azure;
  }

  @media (max-width: 600px) {
    .container {
      width: 100%;
      padding: 1.5rem;
    }
    .box {
      padding: 0.7rem;
      padding-top: 1rem;
      width: 100%;
    }
    h1 {
      font-size: 2rem;
      font-weight: 750;
    }
  }

  .btn {
    background: azure;
    border: 0.1rem solid #2e4f4f;
    border-radius: 0.3rem;
    color: #2e4f4f;
    cursor: pointer;
    display: inline-block;
    font-size: 1rem;
    font-weight: 600;
    padding: 0.5rem 1rem;
    text-decoration: none;
    transition: all 0.2s ease-in-out;
  }
  .btn:hover {
    background: #2e4f4f;
    box-shadow: 0 0 1rem rgba(0, 0, 0, 0.1);
    transform: translateY(-0.2rem);
    color: #fff;
  }
  .blank {
    padding: 1rem;
    margin: 1rem;
  }
</style>
